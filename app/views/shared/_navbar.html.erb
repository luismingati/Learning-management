<div class="hidden sm:flex w-full justify-center items-center text-gray-700 py-6 px-5">
  <div class="container mx-auto flex justify-between items-center ">
    <div class="flex">
      <div>
        <%= link_to "Courses", root_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4"%>
      </div>
    </div>
    <div>
      <%= link_to root_path do %>
        <h2>Logo</h2>
      <% end %>
    </div>
    <div class="flex">
      <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, data: { 'turbo-method' => :delete, 'turbo_confirm' => "Are you sure?"}, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4" %>
        <%= link_to icon('fa-solid', 'user-circle'), edit_user_registration_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4" %>
      <% end %>
    </div>
  </div>
</div>

